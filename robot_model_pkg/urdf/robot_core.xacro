<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/> 

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <material name="green">
        <color rgba="0 1 0 1"/>
    </material>

    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>


    <!-- BASE LINK -->

    <link name="base_link">
    </link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.095 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.1 0 0.04"/>
            <geometry>
                <box size="0.20 0.14 0.08"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <origin xyz="0.1 0 0.04"/>
            <geometry>
                <box size="0.20 0.14 0.08"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="1.7" x="0.20" y="0.14" z="0.08">
            <origin xyz="0.1 0 0.04" rpy="0 0 0 "/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/Red</material>
    </gazebo>

    <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0.0 0.094 0.0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0215" length="0.035"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0215" length="0.035"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.035" radius="0.0215">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- RIGHT WHEEL LINK -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0.0 -0.094 0.0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0215" length="0.035"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0215" length="0.035"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.035" radius="0.0215">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- FRONT CASTER WHEEL LINK -->

    <joint name="front_caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="front_caster_wheel"/>
        <origin xyz=".18 0.0 0.0"/>
    </joint>
    
    <link name="front_caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.0215"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0215"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.0215">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="front_caster_wheel">
        <material>Gazebo/White</material>
        <mu1 value=".001"/>
        <mu2 value=".001"/>
    </gazebo>

    <!-- REAR CASTER WHEEL LINK -->

    <joint name="rear_caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="rear_caster_wheel"/>
        <origin xyz=".0215 0.0 0.0"/>
    </joint>
    
    <link name="rear_caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.0215"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0215"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.0215">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="rear_caster_wheel">
        <material>Gazebo/Blue</material>
        <mu1 value=".001"/>
        <mu2 value=".001"/>
    </gazebo>




</robot>